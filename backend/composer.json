{
    "name": "ardent/pos-backend",
    "description": "Ardent POS Backend API",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.8",
        "sendgrid/sendgrid": "^8.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 index.php",
        "post-install-cmd": [
            "php -r \"if (!file_exists('.env') && file_exists('.env.example')) { copy('.env.example', '.env'); }\""
        ]
    }
}
